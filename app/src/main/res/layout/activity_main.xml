<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:layout_marginTop="8dp"
        android:text="Introduzca el nombre del artista:" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/buscarArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:visibility="invisible"
        android:id="@+id/buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buscarArtista"
        android:layout_below="@+id/buscarArtista"
        android:text="Buscar" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2" />

            <TextView
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Loterias de Venezuela"
                android:id="@+id/titleMenu" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageButton" />

                        <TextView
                            android:id="@+id/nombreArtista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/buscar"
                            android:layout_below="@+id/buscar"
                            android:layout_marginTop="24dp"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceLarge" />



                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/time11Auto"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/nombreArtista"
                            android:layout_below="@+id/nombreArtista"
                            android:text=""
                            android:layout_width="0dp"
                            android:layout_weight=".34" />

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="-"
                            android:id="@+id/thing11Auto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33" />
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="-"
                            android:id="@+id/thing12Auto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Horario"
                            android:id="@+id/time21Auto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".34" />
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="-"
                            android:id="@+id/thing21Auto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33" />
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="-"
                            android:id="@+id/thing22Auto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Horario"
                            android:id="@+id/time31Auto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".34" />
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="-"
                            android:id="@+id/thing31Auto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33" />
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="-"
                            android:id="@+id/thing32Auto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Propaganda"
                android:id="@+id/textView" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
